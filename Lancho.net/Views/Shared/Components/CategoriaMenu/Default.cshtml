        id="dropdownMenuLink" data-bs-toggle="dropdown" aria-expanded="false">
        Lanches
    </a>

    <ul class="dropdown-menu dropdown-menu-dark">
        @foreach(var categoria in Model)
        {
          <li>
            <a class="dropdown-item" asp-controller="Lanche" asp-action="List" style="color:back"
            asp-route-categoria="@categoria.CategoriaNome">@categoria.CategoriaNome</a>
          </li>
        }
       <li class="dropdown-divider"></li>
        <li>
            <a class="dropdown-item" asp-controller="Lanche" asp-action="List" asp-route-categoria="">Todos os Lanches</a>
        </li>
    </ul>
</div>